<% if current_user.offers.present? %>
	売買契約締結先(購入希望者)リスト
	<% current_user.offers.each do |o| %>
  	<h1>名前 : <%= o.candidate_buyer.name %></h1>
    <p><%= o.price %></p>
    <p><%= o.candidate_buyer.hearing %></p>
    <%= button_to "この人と売買契約を締結する",
        buy_contracts_path(buyer_id: o.candidate_buyer.id), 
        data: { confirm: "#{o.candidate_buyer.name}さんで本当によろしいですか？" },
        method: :post %>
    <p>-------------------------------------------------------------------------</p>
		<% end %>
<% else %>
	<h1>まだ購入希望者は現れていません</h1>
<% end %>