<h1>買い手候補登録</h1>
<%= form_with model: [:admin, @candidate_buyer], url: admin_candidates_url, local: true do |form| %>
    <%= form.label :name, "名前" %>
    <%= form.text_field :name %>

    <%= form.label :address, "住所" %>
    <%= form.text_field :address %>

    <%= form.label :price, "希望買取価格" %>
    <%= form.number_field :price %>円

    <%= form.label :transacted_on, "取引日" %>
    <%= form.datetime_select :transacted_on %>

    <%= form.label :hearing, "ヒアリング内容" %>
    <%= form.text_area :hearing %>

    <%= form.hidden_field :id, :value => @user.id %>

    <br><br>
    <%= form.submit "登録", data: { disable_with: 'Submitting...' } %>
<% end %>
