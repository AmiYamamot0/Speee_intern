<% @users.each do |u| %>
<% if u.all_completed? %>
<h3>
<%= u.name %> さん | <%= u.status %> 
</h3>
<br/>
<%= button_to "ステータスを次に進める", admin_users_path(id: u.id), data: { confirm: "進めるけど本当にok?" }, method: :post %>
<% else %>
<h3>
<%= u.name %> さん | <%= u.status %> | 最終ステータスです 
</h3>
<% end %>
<% end %>